page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.user-info {
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
}
.add-bg {
  background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1541345874519&di=89aad228aacc6561013e91c6504ec551&imgtype=0&src=http%3A%2F%2Fpic1.win4000.com%2Fwallpaper%2Fe%2F5992a00f1f550.jpg);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.user-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}

.user-name {
  color: #ffffff;
  font-size: 16px;
  font-weight: bolder
}
.nologin-name{
  color: black;
  font-weight: normal
}
